/* banner */
.banner{
  display: flex;
  align-items: center;
  justify-content: center;
}
.frame{
  background-color: white;
  border-radius: 10rpx;
  width: 730rpx;
  margin-left: 10rpx;
}
.banner{
    position: relative;
}
.banner-image{
  width: 700rpx;
  height: 200rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.share{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 170rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #666;
  opacity: 0.8;
  position: absolute;
  right: 25rpx;
  top: 280rpx;
}
.share-text{
  font-size: 27rpx;
  color: white;
  margin-left: 15rpx;
}
.share-icon{
  width: 35rpx;
}
/* info */
.info{
  margin-top: 10rpx;
}
.avatar{
  width: 100rpx;
  border-radius: 50%
}